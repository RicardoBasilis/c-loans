            <add-payments :prestamo="{{data.id}}" :real="{{loanObj.trueLoan}}" :cuota="{{data.pago}}" :interes="{{data.interes}}" :days="{{data.modal}}" ref="test"></add-payments>
            <div class="forms">
                <div class="form-grids row widget-shadow" data-example-id="basic-forms">
                    <div style="vertical-align: middle">
                        <div class="form-title">
                            <div class="row text-center" style="height: 10px">
                                <div class="usersTitle noPadding">
                                    <h4>Cliente: {{clientObj.fullName}} | <span> Estado: {{loanObj.trueStatus}}</span></h4>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="paymentCard">
                                <a href="/rutas/clientes/actualizarCliente/{{clientObj.clientId}}">
